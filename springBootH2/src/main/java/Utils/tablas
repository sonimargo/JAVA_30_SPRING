
ALTER TABLE BOOKS ADD ESTADO varchar(20);
UPDATE BOOKS SET ESTADO = "DISPONIBLE" WHERE IDBOOK IN (13,14)
UPDATE AUTORES SET IDAUTOR = 1000 WHERE NOMBRE = 'JAVIER'



DROP TABLE BOOKS;
create table BOOKS (
IDBOOK NUMBER,
TITLE VARCHAR2(250),
ISBN VARCHAR2(50),
PAGES NUMBER(5),
YEAR NUMBER(4),
ESTADO VARCHAR2(20),
FK_AUTOR_ID NUMBER
);
ALTER TABLE BOOKS ALTER COLUMN IDBOOK BIGINT;



DROP TABLE AUTORES;
create table AUTORES (
IDAUTOR NUMBER,
NOMBRE VARCHAR2(100),
APELLIDO1 VARCHAR2(100)
);
ALTER TABLE AUTORES ALTER COLUMN IDAUTOR BIGINT;



DROP TABLE CITAS;
create table CITAS (
IDCITA NUMBER,
TEXTOCITA VARCHAR2(250),
FK_AUTOR_ID NUMBER
);
ALTER TABLE CITAS ALTER COLUMN IDCITA BIGINT;










